generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Snip {
  id       Int    @id @default(autoincrement())
  title    String
  code     String
  language String
  authorId Int
  author   User  @relation(fields: [authorId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
  email    String
  snips    Snip[]
}
